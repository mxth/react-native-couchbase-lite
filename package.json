{
  "name": "react-native-couchbase-lite",
  "version": "0.1.0",
  "description": "React Native Couchbase Lite",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/src/index.d.ts",
  "react-native": "src/index.ts",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "reactnativecouchbaselite.podspec"
  ],
  "scripts": {
    "test": "jest",
    "typescript": "tsc --noEmit",
    "lint": "tslint -p .",
    "prettier": "prettier --list-different \"./{src,test,tutorials,example/src}/**/*.{ts, tsx}\"",
    "fix-prettier": "prettier --write \"./{src,test,tutorials,example/src}/**/*.{ts, tsx}\"",
    "prepare": "bob build",
    "release": "release-it",
    "example": "yarn --cwd example",
    "pods": "cd example/ios && node -e \"process.exit(require('os').platform() === 'darwin')\" || pod install",
    "bootstrap": "yarn example && yarn && yarn pods",
    "postinstall": "patch-package"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": "https://github.com/mxth/react-native-couchbase-lite",
  "author": "Thang Mai <maixuanthang@gmail.com> (https://github.com/mxth)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mxth/react-native-couchbase-lite/issues"
  },
  "homepage": "https://github.com/mxth/react-native-couchbase-lite#readme",
  "devDependencies": {
    "@react-native-community/bob": "^0.10.0",
    "@types/jest": "^25.1.2",
    "@types/react": "^16.9.19",
    "@types/react-native": "0.61.10",
    "fp-ts": "^2.5.3",
    "immutable": "^4.0.0-rc.12",
    "io-ts": "^2.1.2",
    "io-ts-types": "^0.5.6",
    "jest": "^25.1.0",
    "patch-package": "^6.2.1",
    "postinstall-postinstall": "^2.0.0",
    "prettier": "1.18.2",
    "react": "~16.9.0",
    "react-native": "~0.61.5",
    "rxjs": "^6.5.4",
    "tslint": "^6.1.0",
    "tslint-config-standard": "^9.0.0",
    "tslint-immutable": "^6.0.1",
    "typescript": "^3.7.5",
    "zio": "./zio-v0.0.6.tgz"
  },
  "peerDependencies": {
    "fp-ts": "*",
    "immutable": "*",
    "io-ts": "*",
    "io-ts-types": "*",
    "react": "*",
    "react-native": "*",
    "rxjs": "*",
    "zio": "*"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "@react-native-community/bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  }
}
